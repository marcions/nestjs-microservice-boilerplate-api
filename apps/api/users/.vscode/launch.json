{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "App: @api/users",
      "type": "node",
      "request": "launch",
      "localRoot": "${workspaceFolder}/../../",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:users:dev"],
      "console": "integratedTerminal",
      "smartStep": true,
      "sourceMaps": true,
      "remoteRoot": "${workspaceFolder}/src",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Test: @api/users",
      "type": "node",
      "args": ["--runInBand", "--config=${workspaceFolder}/jest.config.js"],
      "request": "launch",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["test"],
      "sourceMaps": true
    }
  ]
}
